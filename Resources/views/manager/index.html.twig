{% extends "ASFCommerceBundle::layout.html.twig" %}

{% block asf_commerce_content %}
    {% block asf_product_heading %}
    <div class="jumbotron">
        <h1>{% block heading_title %}{{ 'asf.commerce.title.commerce_manager'|trans }}{% endblock %}</h1>
        <p class="lead">{% block heading_lead %}{{ 'asf.commerce.text.commerce_manager'|trans }}{% endblock %}</p>
    </div>
    {% endblock %}
    
    <div class="row marketing">
        <div class="col-lg-6">
            <h4>{{ 'asf.commerce.title.h4.manage_taxes'|trans }}</h4>
            <p>{{ 'asf.commerce.text.h4.manage_taxes'|trans }}</p>
            <a href="{{ path('asf_commerce_taxes_list') }}" title="{{ 'asf.commerce.btn.taxes_list'|trans }}" class="btn btn-primary">{{ 'asf.commerce.btn.taxes_list'|trans }}</a>
        </div>
        <div class="col-sm-6">
            <h4>{{ 'asf.commerce.title.h4.manage_discounts'|trans }}</h4>
            <p>{{ 'asf.commerce.text.h4.manage_discounts'|trans }}</p>
            <a href="{{ path('asf_commerce_discounts_list') }}" title="{{ 'asf.commerce.btn.discounts_list'|trans }}" class="btn btn-primary">{{ 'asf.commerce.btn.discounts_list'|trans }}</a>
        </div>
    </div>
{% endblock %}
